<div class="card" style="width: 20rem;">
  <div class="card-body">
    <h3 class="card-title"><%= @pirate.name %></h3>
    <p class="card-text">Type: <%= @pirate.weight %></p>
    <p class="card-text">height: <%= @pirate.height %></p>
    <hr>
    <h4 class=""card-title>Ships</h2>
    <% @ships.each do |ship|%>
      <h5 class="card-title"><%= ship.name %></h5>
      <p class="card-text">Type: <%= ship.type %></p>
      <p class="card-text">Booty: <%= ship.booty %></p>
    <% end %>
  </div>
</div>